	<% content_for :sidebar do || %>
		<%= render :partial=> "user/projects/sidebar" %> 
<div>
	<%= link_to "kembali ke project", 
		{:controller => "user/projects", :action => "show", :id => params[:projectid]}%>
</div>			    
    <% end %>

<% form_for (:pfile, @pfile, :url => user_pfiles_path, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag :projectid, params[:projectid] %>
  <div class="edit">  	
	<div>
  		<div><%= f.label :judul %></div>
		<div><%= f.text_field :judul %></div>
  	</div>	
	<div>
  		<div><%= f.label :deskripsi %></div>
		<div><%= f.text_field :deskripsi %></div>
  	</div>
	<div>
		<%= f.submit 'Create' %>
	</div>
  </div>  
<% end %>