<h1>Listing languages</h1>

<% form_for(@language, :url=> admin_languages_path) do |f| %>
  <%= f.error_messages %>
 	bahasa : <%= f.text_field :language %>
	type:<%= f.select :tipe, ["normal", "programming"] %>  
    <%= f.submit 'Create' %>
<% end %>

<table>
  <tr>
    <th>ID</th>
    <th>Language</th>
    <th>Tipe</th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%=h language.id %></td>
    <td><%=h language.language %></td>
    <td><%=h language.tipe %></td>
    <td><%= link_to 'Edit', edit_admin_language_path(language) %></td>
    <td><%= link_to 'Destroy', admin_language_path(language), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

