<h1>Listing tools</h1>
<% if params[:id].blank? %>
	<% form_for(@tool, :url=> url_for(:action =>'index')) do |f| %> 
		<%= render :partial => 'form',:locals => {:f => f} %>
		<%=  f.submit 'buat baru' %> 
	<% end %>
<% else %>
	<% form_for(@tool, :url => url_for(:action =>'update',:id => @tool) ) do |f| %>	 
	  <%= render :partial => 'form',:locals => {:f => f} %>
	  <%= f.submit 'Ubah' %> 
	<% end %>
<% end %>
<table>
  <tr>
    <th>Tool</th>
    <th>Nama tool</th>
    <th>Fungsi</th>
    <th>Versi</th>
  </tr>

<% @tools.each do |tool| %>
  <tr>
    <td><%=h tool.id %></td>
    <td><%=h tool.nama_tool %></td>
    <td><%=h tool.fungsi %></td>
    <td><%=h tool.versi %></td>
    <td><%= link_to 'Edit', :action => 'index',:id => tool %></td>
    <td><%= link_to 'Destroy', admin_tool_path(tool), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
